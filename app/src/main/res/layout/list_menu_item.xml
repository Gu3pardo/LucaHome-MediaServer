<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:background="@color/TextIcon">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:background="@color/Background"
        android:padding="2dp">

        <ImageView
            android:id="@+id/menu_item_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/menu" />

        <TextView
            android:id="@+id/menu_item_border"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/menu_item_image"
            android:background="@color/TextIcon" />

        <Button
            android:id="@+id/menu_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/menu_item_border"
            android:layout_toStartOf="@+id/menu_item_weekday"
            android:background="@xml/button_blank"
            android:padding="5dp"
            android:text="@string/example"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/TextIcon"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menu_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/menu_item_title"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/menu_item_border"
            android:layout_toStartOf="@+id/menu_item_random"
            android:background="@xml/button_blank"
            android:padding="5dp"
            android:text="@string/example"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/TextIcon" />

        <TextView
            android:id="@+id/menu_item_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@xml/button_blank"
            android:text="@string/example"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/TextIcon" />

        <TextView
            android:id="@+id/menu_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/menu_item_weekday"
            android:layout_marginEnd="5dp"
            android:background="@xml/button_blank"
            android:text="@string/example"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/TextIcon" />

        <ImageButton
            android:id="@+id/menu_item_random"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toStartOf="@+id/menu_item_update"
            android:background="@xml/button_blank_white"
            android:contentDescription="@string/contentDescription"
            android:padding="3dp"
            android:src="@android:drawable/ic_menu_help" />

        <ImageButton
            android:id="@+id/menu_item_update"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toStartOf="@+id/menu_item_clear"
            android:background="@xml/button_blank_white"
            android:contentDescription="@string/contentDescription"
            android:padding="3dp"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/menu_item_clear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"
            android:background="@xml/button_blank_white"
            android:contentDescription="@string/contentDescription"
            android:padding="3dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
    </RelativeLayout>

</RelativeLayout>