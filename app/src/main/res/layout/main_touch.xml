<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/weekdayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/weekdayText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/weekdayTextView"
        android:layout_below="@+id/weekdayTextView"
        android:layout_marginTop="5dp"
        android:text="@string/dateText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dateTextView"
        android:layout_below="@+id/dateTextView"
        android:layout_marginTop="5dp"
        android:text="@string/timeText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherConditionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/weatherConditionImageView"
        android:text="@string/weatherConditionText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/weatherConditionImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weatherConditionTextView"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/weather_icon" />

    <TextView
        android:id="@+id/weatherTemperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weatherConditionTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/weatherConditionImageView"
        android:text="@string/temperatureText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherHumidityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weatherTemperatureTextView"
        android:layout_below="@+id/weatherTemperatureTextView"
        android:layout_marginTop="5dp"
        android:text="@string/humidityText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherPressureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weatherHumidityTextView"
        android:layout_below="@+id/weatherHumidityTextView"
        android:layout_marginTop="5dp"
        android:text="@string/pressureText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherUpdateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weatherPressureTextView"
        android:layout_below="@+id/weatherPressureTextView"
        android:layout_marginTop="5dp"
        android:text="@string/weatherTimeUpdateText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/weatherForecast1Condition"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/weatherConditionImageView"
        android:layout_below="@+id/weatherUpdateTextView"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/weather_icon" />

    <TextView
        android:id="@+id/weatherForecast1Weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast1Condition"
        android:layout_alignTop="@+id/weatherForecast1Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast1Condition"
        android:gravity="center_vertical"
        android:text="@string/weekdayText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherForecast1Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast1Condition"
        android:layout_alignTop="@+id/weatherForecast1Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast1Weekday"
        android:gravity="center_vertical"
        android:text="@string/dateText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherForecast1Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast1Condition"
        android:layout_alignTop="@+id/weatherForecast1Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast1Date"
        android:gravity="center_vertical"
        android:text="@string/timeText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherForecast1TemperatureRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast1Condition"
        android:layout_alignTop="@+id/weatherForecast1Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast1Time"
        android:gravity="center_vertical"
        android:text="@string/temperatureRangeText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/weatherForecast2Condition"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/weatherConditionImageView"
        android:layout_below="@+id/weatherForecast1Condition"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/weather_icon" />

    <TextView
        android:id="@+id/weatherForecast2Weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast2Condition"
        android:layout_alignTop="@+id/weatherForecast2Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast2Condition"
        android:gravity="center_vertical"
        android:text="@string/weekdayText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherForecast2Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast2Condition"
        android:layout_alignTop="@+id/weatherForecast2Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast2Weekday"
        android:gravity="center_vertical"
        android:text="@string/dateText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherForecast2Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast2Condition"
        android:layout_alignTop="@+id/weatherForecast2Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast2Date"
        android:gravity="center_vertical"
        android:text="@string/timeText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherForecast2TemperatureRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast2Condition"
        android:layout_alignTop="@+id/weatherForecast2Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast2Time"
        android:gravity="center_vertical"
        android:text="@string/temperatureRangeText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/weatherForecast3Condition"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/weatherConditionImageView"
        android:layout_below="@+id/weatherForecast2Condition"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/weather_icon" />

    <TextView
        android:id="@+id/weatherForecast3Weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast3Condition"
        android:layout_alignTop="@+id/weatherForecast3Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast3Condition"
        android:gravity="center_vertical"
        android:text="@string/weekdayText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherForecast3Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast3Condition"
        android:layout_alignTop="@+id/weatherForecast3Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast3Weekday"
        android:gravity="center_vertical"
        android:text="@string/dateText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherForecast3Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast3Condition"
        android:layout_alignTop="@+id/weatherForecast3Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast3Date"
        android:gravity="center_vertical"
        android:text="@string/timeText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherForecast3TemperatureRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherForecast3Condition"
        android:layout_alignTop="@+id/weatherForecast3Condition"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/weatherForecast3Time"
        android:gravity="center_vertical"
        android:text="@string/temperatureRangeText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/temperatureRaspberry"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/weatherConditionImageView"
        android:layout_below="@+id/weatherForecast3TemperatureRange"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:contentDescription="@string/contentDescription"
        android:onClick="ShowTemperatureGraph"
        android:src="@drawable/temperature_icon" />

    <View
        android:id="@+id/temperatureRaspberryAlarm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/temperatureRaspberry"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/temperatureRaspberry"
        android:background="@xml/circle_green"
        android:clickable="true"
        android:onClick="ShowTemperatureGraph" />

    <TextView
        android:id="@+id/temperatureRaspberryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/temperatureRaspberry"
        android:layout_alignTop="@+id/temperatureRaspberry"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/temperatureRaspberryAlarm"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="ShowTemperatureGraph"
        android:text="@string/raspberryText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/temperatureRaspberryValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/temperatureRaspberry"
        android:layout_alignTop="@+id/temperatureRaspberry"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/temperatureRaspberryName"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="ShowTemperatureGraph"
        android:text="@string/temperatureText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/socketView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/weatherForecast1TemperatureRange"
        android:layout_marginEnd="10dp"
        android:background="@xml/button_blank_white"
        android:clickable="true"
        android:contentDescription="@string/contentDescription"
        android:onClick="ShowSocketsDialog"
        android:src="@drawable/socket" />

    <ImageView
        android:id="@+id/shoppingListView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/socketView"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@xml/button_blank_white"
        android:clickable="true"
        android:contentDescription="@string/contentDescription"
        android:onClick="ShowShoppingListDialog"
        android:src="@drawable/shopping" />

    <ImageView
        android:id="@+id/menuListView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/shoppingListView"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@xml/button_blank_white"
        android:clickable="true"
        android:contentDescription="@string/contentDescription"
        android:onClick="ShowMenuListDialog"
        android:src="@drawable/menu" />

    <ImageView
        android:id="@+id/updateAvailableView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/menuListView"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@xml/button_blank_white"
        android:clickable="true"
        android:contentDescription="@string/contentDescription"
        android:onClick="ShowUpdateAvailableDialog"
        android:src="@android:drawable/ic_dialog_info"
        android:visibility="gone" />

    <com.taishi.library.Indicator
        android:id="@+id/musicIndicator"
        android:layout_width="480dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/temperatureRaspberryValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        app:bar_color="@color/colorWhite"
        app:bar_num="50"
        app:duration="20000"
        app:step_num="65" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/centerYoutubePlayer"
        android:layout_width="480dp"
        android:layout_height="270dp"
        android:layout_below="@+id/musicIndicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="#fff" />

    <TextView
        android:id="@+id/centerTextView"
        android:layout_width="480dp"
        android:layout_height="270dp"
        android:layout_below="@+id/temperatureRaspberryValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="@string/welcomeText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/centerRadioStreamLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicIndicator"
        android:layout_margin="2dp"
        android:gravity="center"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/imageButtonRadioStreamPlay"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:background="@xml/button_blank_white"
            android:contentDescription="@string/contentDescription"
            android:src="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/imageButtonRadioStreamStop"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@xml/button_blank_white"
            android:contentDescription="@string/contentDescription"
            android:src="@android:drawable/editbox_dropdown_light_frame" />
    </LinearLayout>

    <WebView
        android:id="@+id/centerWebView"
        android:layout_width="480dp"
        android:layout_height="270dp"
        android:layout_below="@+id/temperatureRaspberryValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomInfoLinearLayout"
        android:layout_below="@+id/centerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/rssTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rssSeparatorTextView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignEnd="@+id/rssTitleTextView"
            android:layout_alignStart="@+id/rssTitleTextView"
            android:layout_below="@+id/rssTitleTextView"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/rssTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssSeparatorTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rssDescriptionTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssTextView1"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/rssTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssDescriptionTextView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rssDescriptionTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssTextView2"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/rssTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssDescriptionTextView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rssDescriptionTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssTextView3"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="@string/rssText"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomEventLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/bottomInfoLinearLayout"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/calendarLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/calendar1AlarmView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@xml/circle_red" />

                <TextView
                    android:id="@+id/calendar1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/calendarText"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/calendar2AlarmView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@xml/circle_red" />

                <TextView
                    android:id="@+id/calendar2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/calendarText"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/birthdayLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/birthdayAlarmView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@xml/circle_red" />

            <TextView
                android:id="@+id/birthdayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/birthdayText"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>

    <guepardoapps.library.verticalseekbarview.VerticalSeekBarView
        android:id="@+id/volumeSlider"
        android:layout_width="25dp"
        android:layout_height="125dp"
        android:layout_above="@+id/bottomInfoLinearLayout"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/centerTextView"
        android:layout_margin="5dp" />

    <LinearLayout
        android:id="@+id/bottomInfoLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/volumeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="2dp"
            android:text="@string/volumeText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <View
                android:id="@+id/batteryAlarm"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@xml/circle_green" />

            <TextView
                android:id="@+id/batteryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
